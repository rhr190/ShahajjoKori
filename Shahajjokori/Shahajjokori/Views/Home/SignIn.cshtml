@{
    ViewData["Title"] = "Sign In";
}
@model Shahajjokori.Models.Fundraiser
<div style="text-align: center;">
    <h1>@ViewData["Title"]</h1>
    Are you the admin? Then <a asp-area="" asp-controller="Home" asp-action="Signin_Admin">sign in</a> here boss!
</div>

<div class="container" style="margin-top: 5%; margin-bottom:5%;">
    <div class="row">
        <div class="col-md-6 login-section-wrapper">
            <div class="login-wrapper my-auto">
                <form asp-action="SignIn_Panel" method="post">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" placeholder="Enter your email" asp-for="f_email">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" placeholder="Enter your passsword" asp-for="f_password">
                    </div>
                    <p style="color:red">@ViewBag.error_message</p>
                    <button type="submit" class="btn btn-primary" href="@Url.Action("SignIn_Panel","Home")" style="margin-top:5%">Sign in</button>
                </form>
                
                <div style="margin-top: 3%;">
                    <p>Don't have an account?</p>
                    Sign up to become a <a asp-area="" asp-controller="Home" asp-action="SignUp_Fundraiser">fundraiser</a> and start your fundraising today!<br>
                    Sign up to become a <a asp-area="" asp-controller="Home" asp-action="SignUp_Donor">donor</a> and help the community!
                </div>
            </div>
        </div>
        <div class="col-sm-6 px-0 d-none d-sm-block">
            <img src="~/images/log-in.jpg" alt="logo" class="logo">
        </div>
    </div>
</div>


