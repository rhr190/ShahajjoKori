
@{
    Layout = "";
    ViewData["Title"] = "Create_Event";
}
@model Shahajjokori.Models.Event


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="assets/css/login.css">
</head>
<body>
    <div class="container-fluid" style="margin-top:5%">
        <div class="row">
            <main role="main" class="col-md-3" style="margin-top:2%; margin-bottom:5%;">
                <nav class="nav">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("Index","Fundraiser")">User Info</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Create_Event","Event")">Create Event</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">See Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Notifications</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Add Local Event</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Log out</a>
                        </li>
                    </ul>
                </nav>

            </main>
            <main role="main" class="col-md-8">
                <form asp-action="Create_event_entry" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Title</label>
                        <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter event name" asp-for="e_title" required>
                        <small id="emailHelp" class="form-text text-muted">Yor name will be shown out in the website with your event.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Location</label>
                        <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter event location" asp-for="e_location" required>
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Opening</label>
                        <input type="date" class="form-control" id="exampleInputPassword1" placeholder="Enter event opening date" asp-for="e_opening_date"required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Closing</label>
                        <input type="date" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter event closing date" asp-for="e_closing_date"required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Expected Amount</label>
                        <input type="number" class="form-control" rows="5" id="exampleInputEmail1" placeholder="Enter expected amount for the event" asp-for="e_closing_date"required>
                    </div>
                    
                    <div class="form-group">
                        <label for="exampleInputEmail1">Add Picture</label>
                        <input class="form-control" id="exampleInputEmail1" placeholder="Add picture" asp-for="e_pic"required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Event Details</label>
                        <textarea class="form-control" rows="5" id="exampleInputEmail1" placeholder="Write details about the event (not maore than 300 words)"></textarea>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">The information given above is true</label>
                    </div>
                    <button type="submit" class="btn btn-primary" href="@Url.Action("Create_event_entry","Fundraiser")" style="margin-top:5%">Create</button>
                </form>

            </main>

        </div>

    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Shahajjokori - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>



