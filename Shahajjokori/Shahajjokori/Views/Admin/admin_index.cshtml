@{ Layout = ""; }

@model Shahajjokori.Models.Admin

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!--<link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="assets/css/login.css">-->
    <style>
        a {
            color: #2F4F4F;
        }

            a:hover {
                color: #2F4F4F;
                font-weight: bold;
            }

            a:active {
            }

        .active {
            font-weight: bold;
            border-bottom: 1px solid #2F4F4F;
        }

        h1, a, h3, p {
            font-family: 'B612', sans-serif;
            font-family: 'IBM Plex Serif', serif;
            font-family: 'Karla', sans-serif;
            font-family: 'Varela', sans-serif;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3" style="margin-left: 2%;">
                <div style="text-align:center; margin-top:3%;">
                    <h1 style="text-decoration: underline; text-decoration-color: darkgreen;">Shahajjokori</h1>
                </div>
            </div>
            <div class="col-md-8">
                <div style="text-align:center; margin-top:3%;">
                    <h2>Admin Panel</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid" style="margin-top:5%">
        <div class="row">
            <main role="main" class="col-md-3" style=" margin-bottom:5%;">
                <nav class="nav" style="margin-left: 35%;">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("admin_index","Admin")">Admin Info</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Event_Request","Admin")">Event Request</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Approved_Events","Admin")">Approved Events</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Halted_Events","Admin")">Halted Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Event_Success","Admin")">Successful Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Local_Events_Shown","Admin")">Local Events Shown</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Local_Events_Halted","Admin")">Local Events Halted</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Edit_Info","Admin")">Edit Information</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","Home")">Log out</a>
                            <script type="text/javascript">
                                function preventBack() { window.history.forward(); }
                                setTimeout("preventBack()", 0);
                                window.onunload = function () { null };
                            </script>
                        </li>
                    </ul>
                </nav>

            </main>
            <main role="main" class="col-md-6" style="margin-left: 5%; margin-right: 5%;">
                <h3>Admin Details</h3>
                <table class="table">
                    <tbody>

                        <tr>
                            <td>Email</td>
                            <td>@Html.DisplayFor(model => model.admin_email)</td>
                        </tr>

                        <tr>
                            <td>
                                <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#exampleModal2">Change Email</button>
                            </td>
                            <td>
                                <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#exampleModal3">Change Password</button>
                            </td>
                        </tr>

                    </tbody>
                </table>

            </main>

        </div>

    </div>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edit User Info</h5>

                </div>
                <div class="modal-body">
                    <form asp-action="Update_info_admin" method="post">
                        <div class="form-group">

                            <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter name" asp-for="admin_id" type="hidden">

                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" asp-for="admin_email" required>

                        </div>

                        <button type="submit" class="btn btn-primary" onclick="myFunction()" href="@Url.Action("Update_info_admin","Admin")" style="margin-top:5%" >Update</button>
                        <script>
                            function myFunction() {
                                alert("Password changed successfully.");
                            }
                        </script>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal3" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edit User Password</h5>

                </div>
                <div class="modal-body">
                    <form asp-action="Update_info_admin_password" method="post">
                        <div class="form-group">

                            <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter name" asp-for="admin_id" type="hidden">

                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Old Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Enter old password" asp-for="admin_password" required>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">New Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Enter new password" asp-for="admin_password1" required>
                        </div>


                        <button type="submit" class="btn btn-primary" href="@Url.Action("Update_info_admin_password","Admin")" style="margin-top:5%">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Shahajjokori - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
        -->
    <footer class="border-top footer text-muted" style="position: absolute; bottom: 0; width: 100%; white-space: nowrap; line-height:100px;">
        <div class="container">
            &copy; 2021 - Shahajjokori - <a href="@Url.Action("admin_index","Admin")">Admin Info</a> - <a href="@Url.Action("Event_Request","Admin")">Event Request</a> - <a href="@Url.Action("Approved_Events","Admin")">Approved Events</a> - <a href="@Url.Action("Halted_Events","Admin")">Halted Events</a> - <a href="@Url.Action("Event_Success","Admin")">Successful Events</a> - <a href="@Url.Action("Local_Events_Shown","Admin")">Local Events Shown</a> - <a href="@Url.Action("Local_Events_Halted","Admin")">Local Events Halted</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

