<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12" style="text-align: center;">
                <h3 style="text-decoration: underline; text-decoration-color:cadetblue;">Donor Information</h3>
                <p>You have donated total @ViewData["total_amount"] Tk.</p>
            </div>
        </div>
   
    </div>
</div>
<div class="container" style="margin-top:5%; margin-bottom: 15%;">
    <div class="row">
        <div class="col-md-8" style="margin-right: 15%; margin-left: 15%;">

            <table class="table">
                <tbody>
                    <tr>
                        <td><p>Name</p></td>
                        <td><p>@Html.DisplayFor(model => model.f_name)</p></td>
                    </tr>
                    <tr>
                        <td><p>Email</td>
                        <td><p>@Html.DisplayFor(model => model.f_email)</p></td>
                    </tr>
                    <tr>
                        <td>
                            <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#exampleModal2">Edit Info</button>
                        </td>
                        <td>
                            <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#exampleModal3">Edit Password</button>
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>


    </div>

</div>
<footer style=" bottom: 0; width: 100%; white-space: nowrap; line-height:100px;">
    <div class="container">
        &copy; 2021 - Shahajjokori - <a style="color:black" asp-controller="Donor" asp-action="donor_index" asp-route-id="@ViewBag.d_id">@ViewBag.d_name</a> - <a style="color:black" asp-controller="Donor" asp-action="DonationHistory" asp-route-id="@ViewBag.d_id">Donation History</a> - <a style="color:black" asp-controller="Donor" asp-action="Donor_Notification" asp-route-id="@ViewBag.d_id">Notification</a>
    </div>
</footer>

<!-- Modal -->
<div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit User Info</h5>

            </div>
            <div class="modal-body">
                <form asp-action="Update_info_donor" method="post">
                    <div class="form-group">

                        <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter name" asp-for="f_id" type="hidden">

                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Name</label>
                        <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter name" asp-for="f_name">

                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" asp-for="f_email" required>

                    </div>

                    <button type="submit" class="btn btn-primary" href="@Url.Action("Update_info_donor","Donor")" style="margin-top:5%">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal3" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit User Password</h5>

            </div>
            <div class="modal-body">
                <form asp-action="Update_info_donor_password" method="post">
                    <div class="form-group">

                        <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter name" asp-for="f_id" type="hidden">

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Old Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Enter password" asp-for="f_password" value="" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">New Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Enter password" asp-for="f_password1" required>
                    </div>


                    <button type="submit" class="btn btn-primary" href="@Url.Action("Update_info_donor_password","Donor")" style="margin-top:5%">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>

